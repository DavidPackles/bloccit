<%= simple_form_for [@post, @post.comments.build], remote: true do |f| %>

<div class ="form-group">
  <%= f.input :body, label: "Your Comment", placeholder: 'What are your thoughts?', input_html: {class: 'form-control'}, error_html: { class: 'form-group has-error'} %>
</div>

<div class ="form-group">
  <%= f.button :submit, 'Save', class: 'btn btn-success' %>
</div>

<% end %>
