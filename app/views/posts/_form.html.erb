<%= simple_form_for [topic, post] do |f| %>

  <%= f.input :title, placeholder: 'Enter Post Title', input_html: {class: ' form-group form-control'}, error_html: { class: 'has-error'} %>
  <%= f.input :body, placeholder: 'Enter body', input_html: {class: 'form-control'}, error_html: { class: 'form-group has-error'} %>
  <%= f.button :submit, 'Save', class: 'form-group btn btn-success' %>

<% end %>