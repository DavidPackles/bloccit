<%= simple_form_for [topic, post] do |f| %>

  <%= f.input :title, placeholder: 'Enter Post Title', input_html: {class: 'form-control'}, error_html: { class: 'form-group has-error'} %>
  <%= f.input :body, placeholder: 'Enter body', input_html: {class: 'form-control'}, error_html: { class: 'form-group has-error'} %>
  
  <div class="form-group">
    <%= f.button :submit, 'Save', class: 'btn btn-success' %>
  </div>
  
<% end %>