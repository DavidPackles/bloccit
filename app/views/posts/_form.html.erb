<%= simple_form_for [topic, post] do |f| %>

<div class ="form-group">
  <%= f.input :title, placeholder: 'Enter Post Title', input_html: {class: 'form-control'}, error_html: { class: 'has-error'}%>
</div>

<div class ="form-group">
  <%= f.input :body, placeholder: 'Enter body', input_html: {class: 'form-control'}, error_html: { class: 'form-group has-error'} %>
</div>

<div class ="form-group">
  <%= f.button :submit, 'Save', class: 'btn btn-success' %>
</div>

<% if @post.image? %>
  <div class="form-group"> 
    <p>Post Image</p>
    <%= image_tag( @post.image.full.url) %>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
</div>


<% end %>